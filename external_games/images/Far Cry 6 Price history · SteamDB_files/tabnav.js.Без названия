"use strict";class TabbableLink extends HTMLAnchorElement{connectedCallback(){this.addEventListener("click",this.onClick)}onClick(t){if(t.preventDefault(),this.classList.contains("selected"))return;const n=document.getElementById(this.getAttribute("aria-controls"));if(window.requestAnimationFrame(()=>{this.activate(this),this.activate(n),this.dispatchEvent(new Event("tab-shown"));const e=this.closest(".tabbable");e&&t.isTrusted&&e.scrollIntoView({block:"start",behavior:"smooth"})}),location.pathname==="/search/")return;history.replaceState(null,null,this.href);const s=document.querySelector('link[rel="canonical"]');if(s){const e=new URL(this.href,location.origin);s.href=e.toString()}const i=document.querySelector('h1[itemprop="name"]');if(i){let e="";i&&(e=i.textContent,e+=" ");for(const o of this.childNodes)if(o.nodeType===Node.TEXT_NODE){e+=o.textContent.trim();break}e+=" \xB7 SteamDB";const c=document.querySelector("head > title");c.textContent=e}}activate(t){const n=t.parentNode.querySelector(".selected");n&&n.classList.remove("selected"),t.classList.add("selected")}}customElements.define("tabbable-link",TabbableLink,{extends:"a"});
